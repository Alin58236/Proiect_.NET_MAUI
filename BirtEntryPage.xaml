<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="beerTMobile.BirtEntryPage"
             Title="BirtEntryPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Adauga birt" Clicked="OnBirtAddedClicked" />
    </ContentPage.ToolbarItems>
    <ListView x:Name="listView" Margin="20" ItemSelected="OnListViewItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding BirtName}" Detail="{Binding Adresa}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>